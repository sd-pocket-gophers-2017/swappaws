    <p>
      <%= label_tag(:street_address, "Street Address") %><br>
      <%= text_field_tag('event[street_address]') %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col s12 m6 l6">
    <p>
      <%= label_tag(:city, "City") %><br>
      <%= text_field_tag('event[city]') %>
    </p>
  </div>
  <div class="col s12 m6 l6">
    <p>
      <%= label_tag(:state, "State") %><br>
      <%= text_field_tag('event[state]') %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col s12 m6 l6">
    <p>
      <%= label_tag(:start_date, "Start Date") %><br>
      <%= text_field_tag('start_date', '', class:'datepicker') %>
    </p>
  </div>
  <div class="col s12 m6 l6">
    <p>
      <%= label_tag(:start_time, "Start Time") %><br>
      <%= text_field_tag('start_time', '', class:'timepicker') %>
    </p>
  </div>
</div>
<div class="row">
  <div class="col s12 m6 l6">
    <p>
      <%= label_tag(:end_date, "End Date") %><br>
      <%= text_field_tag('end_date', '', class:'datepicker') %>
    </p>

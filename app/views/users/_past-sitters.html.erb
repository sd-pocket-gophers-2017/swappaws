<% if @events_past_as_owner && @events_past_as_owner.any? %>
  <ul>
    <% @events_past_as_owner.each do |event| %>
      <div class="row card pad-t-1 pad-b-1">
        <div class="col s3 m3 l8">
          <% sitter = User.find(event.sitter_id) %>
          <% unless Review.find_by(event: event, type_reviews: 'sitter') %>
            <li>Sitter: <%= sitter.first_name %> <%= sitter.last_name %></li>
            <li>Sitter email: <%= sitter.email %></li>
            <li><%= event.city %>, <%= event.state %></li>
            <li>Sitting from <%= date_time_helper(event.start_date_time) %> to <%= date_time_helper(event.end_date_time) %></li>
        </div>
        <div class="col s3 m3 l2">
          <li> <%= link_to('Review', new_event_review_path(event), :class => 'waves-effect waves-light btn') %></li>
          <% end %>
        </div>
      </div>
    <% end %>
  </ul>
<% end %>

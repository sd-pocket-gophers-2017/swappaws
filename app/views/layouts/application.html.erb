<!DOCTYPE html>
<html>
  <head>
    <title>Swappaws</title>
    <%= csrf_meta_tags %>

  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
  <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <!-- <div class="navbar-fixed"> -->
        <nav class='cyan darken-4'>
          <div class="nav-wrapper ">
            <a href="/" class="brand-logo"><img src="/assets/swap_paws_logo.png" style="width:223px;height:57.875px;"></a>
            <ul class="right hide-on-med-and-down">
              <li><%= link_to('Home', pets_path) %></li>
              <li><%= link_to('Current Events', events_path) %></li>
              <% if user_signed_in? %>
                <li><%= link_to("#{current_user.first_name}", profile_path) %></li>
                <li><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
              <% else %>
                <li><%= link_to('Login', new_user_session_path) %></li>
                <li><%= link_to('Sign Up', new_user_registration_path) %></li>
              <% end %>
            </ul>
          </div>
        </nav>
      <!-- </div> -->
      <%= yield %>
    </div>
  </body>
</html>
